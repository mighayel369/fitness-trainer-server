{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",            
    "paths": {
      "*": ["*"]                 
    },
    "resolveJsonModule": true,
     "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
